@model WebCrawler.Core.Models.Websites
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{ 
    var messageType = (int)ViewData["MessageType"];
    var message = (string) ViewData["Message"];

}


    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"> <i class="fas fa-fw fa-tools"></i> Configuration Page</h1>
           
        </div>


        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-6">
                <!-- Dropdown Card Example -->
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Scrapper Configuration</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Dropdown Header:</div>
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                      
                        <div>
                            @using (Html.BeginForm("SaveConfiguration", "Configuration", FormMethod.Post))
                            {
                                <div class="form-group">

                                    <input type="text" name="WebsiteId" style="display:none" value="@(Model!=null?Model.Id : 0)" />

                                    <label>WebSite Name</label>
                                    <input type="text" placeholder="Enter Your Website Name here" class="form-control" name="WebsiteName" value="@(Model!=null?@Model.WebsiteName: "")" />
                                </div>



                                <div class="form-group">
                                    <label>Website Url</label>
                                    <input type="text" placeholder="Enter Your Website Url here" class="form-control" name="WebsiteUrl" value="@(Model!=null?@Model.WebsiteUrl: "")" />
                                </div>

                                <div class="form-group">

                                    <button type="submit" class="btn btn-info" style="width:100%;">
                                        <i class="fas fa-fw fa-save"></i>
                                        Save Website
                                    </button>
                                </div>



                                <div class="form-group">
                                    
                                    <div style="text-align:center">

                                        @if (messageType == 200)
                                        {
                                        <div class="alert alert-success">
                                            @message
                                        </div>
                                        }
                                        else if (messageType == 500)
                                        {
                                            <div class="alert alert-danger">
                                                @message
                                            </div>
                                        }

                                    </div>

                                </div>

                                    }


                                </div>


                </div>

            </div>

        </div>




    </div>
    </div>


      
        